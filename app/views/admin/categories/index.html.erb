<h1>Manage Categories</h1>

<%= link_to "Add New Category", new_admin_category_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to "Edit", edit_admin_category_path(category) %> |
          <%= button_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, form_class: "inline-form" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
