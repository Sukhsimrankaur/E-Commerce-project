<h1>Your Shopping Cart</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% @cart_items.each do |item| %>
        <% product = item[:product] %>
        <% quantity = item[:quantity] %>
        <tr>
          <td><%= product.name %></td>
          <td><%= quantity %></td>
          <td>$<%= product.price %></td>
          <td>$<%= product.price * quantity %></td>
          <td>
            <%= button_to 'Remove', remove_from_cart_path(product.id), method: :delete %>
          </td>
        </tr>
        <% total += product.price * quantity %>
      <% end %>
    </tbody>
  </table>

  <h3>Total: $<%= total %></h3>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
